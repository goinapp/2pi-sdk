{
  "include": ["./ts"],
  "exclude": ["/node_modules/", "/dist/"],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "ts",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true
  }
}
